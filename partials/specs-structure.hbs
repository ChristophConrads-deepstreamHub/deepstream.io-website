<link rel="stylesheet" type="text/css" href="{{asset 'css/info-messagestructure.css'}}" />
<script type="text/javascript" src="{{asset 'js/info-messagestructure.js'}}"></script>

{{> specs-indepth}}

{{#each messageSpecs.specs}}
{{#each this.structures}}
<div class="section">
	<h2>
		<a name="{{this.id}}">{{this.action}}</a>
	</h2>
	<div class="action-content">
		<p class="description">
			{{this.description}}
		</p>
		<table>
			<tbody>
				<tr>
					<td>Direction</td>
					<td>{{this.direction}}</td>
				</tr>
				<tr>
					<td>Message</td>
					<td>
						<span class="message-format">{{this.message}}</span>
					</td>
				</tr>
				{{#if this.ack}}
				<tr>
					<td>Ack</td>
					<td class="message-format">
						<span class="message-format">{{this.ack}}</span>
					</td>
				</tr>
				{{/if}}
				{{#if this.datatype}}
				<tr>
					<td>Data type</td>
					<td class="message-format">
						<span class="message-format">{{this.datatype}}</span>
					</td>
				</tr>
				{{/if}}
			</tbody>
		</table>
	</div>
</div>
{{/each}}
{{/each}}